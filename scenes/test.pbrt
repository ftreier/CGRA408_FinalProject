Film "image"
  "integer xresolution" [ 1920 ]
  "integer yresolution" [ 1080 ]
  "string filename" [ "test.exr" ]
PixelFilter "box"
LookAt 8.7882 11.4442 -9.1934 0 0 0 0 1 0

#Integrator "directlighting"

Camera "perspective"
	"float fov" [ 52 ]

Sampler "sobol" "integer pixelsamples" [ 2048 ]

WorldBegin

	# distance scene
	AttributeBegin
		Rotate -90 1 0 0
		Rotate 200 0 0 1
		Scale 2.0 2.0 2.0
		LightSource "infinite"
			"string mapname" [ "env_map_medium_debug.exr" ]
			"rgb L" [ 1.0 1.0 1.0 ]
	AttributeEnd

	# scene photo
	ScenePhoto "string filename" "background.png"

	# local scene
	AttributeBegin
		Material "matte"
			"rgb Kd" [ 0.5 0.5 0.5 ]

		Shape "trianglemesh"
			"integer indices" [ 0 1 2 0 3 2 ]
			"point P" [-10 0 -10 10 0 -10 10 0 10 -10 0 10 ]
	AttributeEnd

	# synthetic objects
	SynthSceneBegin

		MakeNamedMaterial "coneA"
			"string type" "plastic"
			"color Kd" [ 0.969 0.316 0.07 ]
			"color Ks" [ 1.0 1.0 1.0 ]
			"float roughness" [ 0.05 ]

		MakeNamedMaterial "coneB"
			"string type" "translucent"
			"color Kd" [ 0.969 0.316 0.07 ]
			"color Ks" [ 1.0 1.0 1.0 ]
			"float roughness" [ 0.05 ]
			"color reflect" [ 1.0 1.0 1.0 ]
			"color transmit" [ 1.0 1.0 1.0 ]

		MakeNamedMaterial "conePlastic"
			"string type" "mix"
			"color amount" [ 0.75 0.75 0.75 ]
			"string namedmaterial1" "coneA"
			"string namedmaterial2" "coneB"

		AttributeBegin
			Translate 0.0 0.005 0.0
			#AnimationFile "string filename" "blabla"
			Material "plastic"
				"color Kd" [ 0.8750 0.9028 0.9497 ]
				"color Ks" [ 0.75 0.75 0.75 ]
				"float roughness" [ 0.5 ]
			Include "ball.pbrt"
		AttributeEnd

		AttributeBegin
			Translate 0.0 0.0075 0.0
			Scale 0.95 0.95 0.95
			NamedMaterial "conePlastic"
			Include "cone.pbrt"
		AttributeEnd

		AttributeBegin
			Translate 0.0 0.0075 0.0
			Scale 0.95 0.95 0.95
			NamedMaterial "conePlastic"
			Include "coneTest.pbrt"
		AttributeEnd

		AttributeBegin
			Material "plastic"
				"color Kd" [ 0.8159 0.8091 0.1823 ]
				"color Ks" [ 0.75 0.75 0.75 ]
				"float roughness" [ 0.05 ]
			Include "hockeyStick.pbrt"
		AttributeEnd

		AttributeBegin
			Material "matte"
				"color Kd" [ 0.5 0.5 0.5 ]
			#Include "plane.pbrt"
		AttributeEnd

		AttributeBegin
			Material "mirror"
			Translate 0 4 0
			#Shape "sphere" "float radius" [6]
		AttributeEnd

	SynthSceneEnd
WorldEnd
