Film "image"
        "integer xresolution" [ 1200 ]
        "integer yresolution" [ 800 ]
        "string filename" [ "test.PNg" ]
PixelFilter "box"
LookAt 0 0 0 6.5 -10. -14  0 1 0

Camera "perspective"
        "float fov" [ 60 ]

Sampler "halton" "integer pixelsamples" [4]

WorldBegin

	Translate 6.5 -10. -14

	# distand scene
	AttributeBegin
		Rotate -90 1 0 0
		LightSource "infinite"
				"string mapname" [ "env_map_small.exr" ]
				"rgb L" [1 1 1]
	AttributeEnd

	# scene photo
	ScenePhoto "string filename" "test.png"

	# local scene
	AttributeBegin
		Material "substrate"
			"rgb Kd" [1 0.5 0.7]

		Shape "trianglemesh"
			"integer indices" [0 1 2 0 3 2 ]
			"point P" [ -10 0 -10  10 0 -10   10 0 10   -10 0 10 ]
	AttributeEnd

	# synthetic objects
	SynthSceneBegin
		AttributeBegin
			#Material "kdsubsurface" "color Kd" [1.0 0.5 0.2]
			Material "mirror" "color Kr" [1. 1. 1.]

			#Scale 0.75 0.75 0.75

			Translate 8.6 0 3.7
			#Translate -5 0 3.6
			#Rotate -5 1 0 0
			#Rotate 10 0 0 1
			Scale 1.5 1.5 1.5

			#Shape "sphere" "float radius" [4]
			Include "cone.pbrt"

			Translate 0 1 0
			Include "ball.pbrt"
		AttributeEnd

		AttributeBegin

			Material "mirror" "color Kr" [1. 1. 1.]
			#Include "plane.pbrt"
		AttributeEnd
	SynthSceneEnd
WorldEnd
