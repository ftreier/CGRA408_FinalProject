Film "image"
        "integer xresolution" [ 1200 ]
        "integer yresolution" [ 800 ]
        "string filename" [ "test.exr" ]
PixelFilter "box"
LookAt 0 0 0 9.2 -13.6 -14  0 1 0

Camera "perspective"
        "float fov" [ 60 ]

Sampler "halton" "integer pixelsamples" [4]

WorldBegin

	Translate 9.2 -13.6 -14

	# distand scene
	AttributeBegin
		Rotate -90 1 0 0
		LightSource "infinite"
				"string mapname" [ "env_map_small.exr" ]
				"rgb L" [1 1 1]
	AttributeEnd

	# scene photo
	ScenePhoto "string filename" "test.png"

	# local scene
	AttributeBegin
		#Translate 9.2 -13.6 -14

		Material "substrate"
			"rgb Kd" [1 0.5 0.7]

		Shape "trianglemesh"
			"integer indices" [0 1 2 0 3 2 ]
		    "point P" [ -10 0 -10  10 0 -10   10 0 10   -10 0 10 ]
	AttributeEnd

	# synthetic objects
	SynthSceneBegin
		AttributeBegin
			#Material "kdsubsurface" "color Kd" [1.0 0.5 0.2]
			Material "mirror" "color Kr" [1. 1. 1.]

			#Scale 0.75 0.75 0.75

			Translate 9.65 0.15 5.35
			Rotate -5 1 0 0
			Rotate 10 0 0 1
			Scale 1.5 1.5 1.5

			#Shape "sphere" "float radius" [4]
			Include "cone.pbrt"
			Include "ball.pbrt"
		AttributeEnd
	SynthSceneEnd
WorldEnd
