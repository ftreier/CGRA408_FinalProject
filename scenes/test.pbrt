Film "image"
        "integer xresolution" [ 1200 ]
        "integer yresolution" [ 800 ]
        "string filename" [ "test.exr" ]
PixelFilter "box"
LookAt 0 0 0 9.2 -13.6 -14  0 1 0

Camera "perspective"
        "float fov" [ 60 ]

Sampler "halton" "integer pixelsamples" [16]

WorldBegin

	Translate 9.2 -13.6 -14

	# distand scene
	AttributeBegin
		#Rotate -45 0 1 0
		Rotate -90 1 0 0
		LightSource "infinite"
				"string mapname" [ "env_map_medium.exr" ]
				"rgb L" [1 1 1]
	AttributeEnd

	# scene photo
	ScenePhoto "string filename" "test.png"

	# local scene
	AttributeBegin
		Texture "tmap" "color"
			"imagemap" "string filename" "renderBackground.png"

		Material "substrate"
			"rgb Kd" [1 0.5 0.7]
			#"texture Kd" "tmap"

		Shape "trianglemesh"
			"integer indices" [0 1 2 0 3 2 ]
		    "point P" [ -10 0 -10  10 0 -10   10 0 10   -10 0 10 ]
	AttributeEnd

	# synthetic objects
	SynthSceneBegin
		AttributeBegin
			Material "kdsubsurface" "color Kd" [1.0, 0.5, 0.2]
			#Material "mirror" "color Kr" [1. 1. 1.]

			#Translate -2 2 2
			#Scale 0.75 0.75 0.75
			#Shape "sphere" "float radius" [4]
			Include "cone1.pbrt"
			Include "ball1.pbrt"
		AttributeEnd
	SynthSceneEnd
WorldEnd
